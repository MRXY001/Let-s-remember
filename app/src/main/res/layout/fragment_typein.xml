<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TypeinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--录入框-->
        <EditText
            android:id="@+id/et_typein"
            android:hint="录入框"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/border_margin"
            android:minHeight="200dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_my_typein"
                android:text="我的录入帖"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="90dp"
                android:layout_marginRight="@dimen/border_margin_big"
                android:layout_marginVertical="@dimen/border_margin_big"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_integral"
                android:text="积分：0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="90dp"
                android:layout_marginLeft="@dimen/border_margin_big"
                android:layout_marginVertical="@dimen/border_margin_big"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_balance"
                android:text="余额"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="90dp"
                android:layout_marginRight="@dimen/border_margin_big"
                android:layout_marginVertical="@dimen/border_margin"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_withdrawal"
                android:text="提现"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="90dp"
                android:layout_marginLeft="@dimen/border_margin_big"
                android:layout_marginVertical="@dimen/border_margin"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>